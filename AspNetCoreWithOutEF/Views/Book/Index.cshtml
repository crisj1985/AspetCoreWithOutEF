@*@model IEnumerable<AspNetCoreWithOutEF.Models.BookModelView>*@

@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Books";
}


<div class="jumbotron">
    <h1>@ViewData["Title"]</h1>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for (int i = 0; i < @Model.Rows.Count ; i++) {
        <tr>
            <td>
                @Model.Rows[i]["Title"].ToString()
            </td>
            <td>
                @Model.Rows[i]["Author"].ToString()
            </td>
            <td>
                @Model.Rows[i]["Price"].ToString()
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["BookId"].ToString()">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["BookId"].ToString()">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
